<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:background="@drawable/backgroundline"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="첫번째 미세 퀴즈"
            android:textColor="#000000"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/quizline"
            android:orientation="vertical">

            <TextView
                android:id="@+id/quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:text="비가 오면 미세먼지가 사라질까?"
                android:textColor="#000000"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#00ff0000"
                    android:id="@+id/o"
                    android:text="O"
                    android:textSize="15dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#00ff0000"
                    android:id="@+id/x"
                    android:text="X"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/quizAnsLayout"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="invisible"
            android:orientation="vertical">

            <TextView
                android:id="@+id/quiz_ans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="정답 : X"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/quiz_explan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="10dp"
                android:text="미세먼지는 크기가 너무 작아 빗방울과 부딪쳐 씻겨 내려가기보다 빗방울을 피해 갈 가능성이 높습니다."
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/quiz_explan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="미세먼지를 줄일 수 있는 조건은 많은 양의 비가 한꺼번에 오거나 강한 바람이 부는 날씨입니다."
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <Button
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/next"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/searchline"
            android:backgroundTint="#44ab6f"
            android:text="다음 문제" />
    </LinearLayout>
</LinearLayout>